<?xml version="1.0" encoding="utf-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">




    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Ranveer Singh"></constructor-arg>
        <constructor-arg index="1" value="Male"></constructor-arg>
        <constructor-arg index="2" value="36"></constructor-arg>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="actorName" value="Ranveer Kapoor"></constructor-arg>
        <constructor-arg name="gender" value="Male"></constructor-arg>
        <constructor-arg name="age" value="36"></constructor-arg>
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg type="String" value="Hrithik Roshan"></constructor-arg>
        <constructor-arg type="String" value="Male"></constructor-arg>
        <constructor-arg type="int" value="43"></constructor-arg>
    </bean>


    <!--<bean name="movie1" class="com.stackroute.domain.Movie" autowire="byName"></bean>-->
    <!--<bean name="movie1" class="com.stackroute.domain.Movie" autowire="byName">-->
    <bean id="beanLifecycle" class = "com.stackroute.demo.BeanLifeCycleDemoBean" init-method = "customInit"
          destroy-method = "customDestroy">
        <property name = "message" value = "Hello World!"/>
    </bean>






</beans>
